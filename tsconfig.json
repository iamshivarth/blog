{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strict": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "types": [
            "react/next",
            "react-dom/next",
            "jest",
            "node",
            "@testing-library/jest-dom"
        ],
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}